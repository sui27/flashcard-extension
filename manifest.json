{
    "manifest_version": 3,
    "name": "Flashcard English",
    "version": "1.0",
    "description": "Học từ vựng tiếng Anh qua Flashcard",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": [
        "storage",
        "notifications",
        "alarms"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icons/icon48.png"
    }
}
